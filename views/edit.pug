extends base.pug

block content
    
    
      

    form(class='py-4 col-10 col-sm-8 col-md-5 mx-auto shadow p-3 mb-5 rounded border' action=`/update/${user.id}` method='post')
        div(class="col-10 mt-4 mx-auto")
            label(for="name" class="font-weight-bold col-10") Name:
                input(type="text" class="form-control" name='name', value=`${user.name}`)
        div(class="col-10 mt-4 mx-auto")        
            label(for='email' class="font-weight-bold col-10") Email:
                input(type="text" class="form-control" name='email' id='email' value=`${user.email}`)
        div(class="col-10 mt-4 mx-auto")         
            label(for='adress' class="font-weight-bold col-10") Address:
                input(type="text" class="form-control" id='adress' name="adress",value=`${user.adress}`)
        div(class="col-10 mt-4 mx-auto")         
            label(for='password' class="font-weight-bold col-10") Password:
                input(type="password" class="form-control" id='password' name="password",value=`${user.password}`) 
        div(class="col-9 mt-4 mx-auto")
            input(class='btn-primary btn-block col-10' type="submit", name="done")  
    